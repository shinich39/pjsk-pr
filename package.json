{
  "name": "pjsk-pr",
  "version": "1.0.0",
  "description": "Search for Project SEKAI public room from twitter.",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "test": "node test.js",
    "build:osx": "electron-builder --mac",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "productName": "pjsk pr",
    "appId": "com.shinich39.pjskpr",
    "artifactName": "${productName}-${version}.${ext}",
    "copyright": "Copyright Â© year ${author}",
    "asar": true,
    "removePackageScripts": true,
    "protocols": {
      "name": "pjsk pr",
      "schemes": [
        "pjskpr"
      ]
    },
    "directories": {
      "output": "./dist/"
    },
    "files": [
      "**/*"
    ],
    "extraFiles": [],
    "extraResources": [],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "icon": "./src/icons/512x512.png"
    },
    "dmg": {
      "icon": "./src/icons/512x512.png"
    },
    "win": {
      "target": [
        "zip",
        "nsis",
        "portable"
      ],
      "icon": "./src/icons/512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "./src/icons/256x256.ico"
    },
    "linux": {
      "desktop": {
        "StartupNotify": "false",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/pjskpr"
      },
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "icon": "./src/icons/256x256.png"
    }
  },
  "keywords": [
    "electron",
    "pjsk",
    "project-sekai"
  ],
  "author": "shinich39 <shinich39@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  }
}
